<Window x:Class="ULer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ULer"
        mc:Ignorable="d"
        Title="大小写转换" Height="350" Width="500" MinHeight="300" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition MinWidth="100"/>

            <ColumnDefinition MinWidth="100"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition/>

            <RowDefinition Height="75"/>

        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Margin="0" Grid.ColumnSpan="2" MinWidth="300" MinHeight="200"/>
        <Button x:Name="up" Content="转换为大写" Margin="0" Click="up_Click" Grid.Row="1"/>
        <Button x:Name="low" Content="转换为小写" Margin="0" Click="low_Click" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
